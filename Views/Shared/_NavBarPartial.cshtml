@model VoxDocs.DTO.NavBarInfoDTO

<nav class="navbar navbar-expand-lg fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" asp-controller="BuscarMvc" asp-action="Buscar">
            <span class="material-icons" style="font-size:36px;">folder_open</span>
            <span class="ms-2">VoxDocs</span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-center" id="navbarItems">
                <!-- Suporte Voz -->
                <li class="nav-item me-2">
                    <form asp-controller="BuscarMvc" asp-action="Buscar" class="m-0">
                        <button type="submit" class="btn btn-custom d-flex align-items-center">
                            <span class="material-icons me-1">mic</span>
                            <span class="d-none d-md-inline">Suporte Voz</span>
                        </button>
                    </form>
                </li>

                <li class="nav-item me-2">
                    <form asp-controller="DashboardMvc" asp-action="Dashboard" class="m-0">
                        <button type="submit" class="btn btn-custom d-flex align-items-center">
                            <span class="material-icons me-1">dashboard</span>
                            <span class="d-none d-md-inline">Dashboard</span>
                        </button>
                    </form>
                </li>

                <!-- Logout -->
                <li class="nav-item me-2">
                    <form method="post" asp-controller="NavBarMvc" asp-action="Logout" class="m-0">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-custom d-flex align-items-center">
                            <span class="material-icons me-1">logout</span>
                            <span class="d-none d-md-inline">Logout</span>
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</nav>

