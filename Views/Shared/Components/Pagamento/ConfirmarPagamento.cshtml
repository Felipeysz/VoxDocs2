@{
    Layout = null;
    Context.Response.StatusCode = 200;
    var token = (string)ViewData["Token"];
    var mainMessage = "Pagamento Cartão Confirmado!";
    var subMessage = "Seu plano está ativo. Aproveite todas as funcionalidades!";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Pagamento Cartão Confirmado • VoxDocs</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Material Symbols & Poppins -->
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

  <style>
    :root {
      --bs-accent: #774C9E;
    }
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f4f6f9;
    }
  </style>
</head>
<body class="d-flex align-items-center justify-content-center vh-100 p-3">

  <div class="card shadow-sm" style="max-width: 480px; width: 100%;">
    <!-- Banner -->
    <div class="card-header text-center text-white" style="background-color: var(--bs-accent);">
      <div class="mb-3">
        <span class="d-inline-flex align-items-center justify-content-center rounded-circle bg-white bg-opacity-25" style="width: 88px; height: 88px;">
          <span class="material-symbols-outlined fs-1">credit_card</span>
        </span>
      </div>
      <h1 class="h4 fw-semibold mb-1">@mainMessage</h1>
      <p class="mb-0 opacity-75">@subMessage</p>
    </div>

    <!-- Conteúdo -->
    <div class="card-body text-center">
      <p class="mb-4">
        Obrigado por usar Cartão. Seu pagamento foi processado com sucesso.<br />
        Em instantes você será redirecionado para o login.
      </p>

      <span id="countdownCartao" class="badge bg-primary fs-5 py-2 px-3 mb-4">10s</span>

      <a href="/LoginMvc/Login" class="btn btn-success btn-lg w-100 text-uppercase fw-semibold">
        Ir para Login Agora
      </a>
    </div>
  </div>

  <!-- Bootstrap JS (opcional, só se precisar de componentes interativos) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Countdown de 10 segundos
    let secondsCartao = 10;
    const countdownCartao = document.getElementById('countdownCartao');
    const intervalCartao = setInterval(() => {
      secondsCartao--;
      countdownCartao.textContent = secondsCartao + 's';
      if (secondsCartao <= 0) {
        clearInterval(intervalCartao);
        window.location.href = "/LoginMvc/Login";
      }
    }, 1000);
  </script>

</body>
</html>
