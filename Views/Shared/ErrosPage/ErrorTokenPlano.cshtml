@{
    Layout = null;
    Context.Response.StatusCode = 400;
    var mensagemErro = ViewBag.MensagemErro as string ?? "Ocorreu um erro com o token do plano.";
    var mainMessage = "Erro ao Acessar o Plano";
    var subMessage = mensagemErro;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Erro • VoxDocs</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Material Symbols & Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

    <style>
        :root {
            --bs-accent: #dc3545;
        }
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f6f9;
        }
    </style>
</head>
<body class="d-flex align-items-center justify-content-center vh-100 p-3">

    <div class="card shadow-sm" style="max-width: 480px; width: 100%;">
        <!-- Banner -->
        <div class="card-header text-center text-white" style="background-color: var(--bs-accent);">
            <div class="mb-3">
                <span class="d-inline-flex align-items-center justify-content-center rounded-circle bg-white bg-opacity-25" style="width: 88px; height: 88px;">
                    <span class="material-symbols-outlined fs-1">error</span>
                </span>
            </div>
            <h1 class="h4 fw-semibold mb-1">@mainMessage</h1>
            <p class="mb-0 opacity-75">@subMessage</p>
        </div>

        <!-- Conteúdo -->
        <div class="card-body text-center">
            <p class="mb-4">
                Não foi possível acessar o plano. Verifique o link ou entre em contato com o suporte.
            </p>

            <a href="@Url.Action("Index", "Home")" class="btn btn-danger btn-lg w-100 text-uppercase fw-semibold">
                Voltar à Página Inicial
            </a>
        </div>
    </div>

    <!-- Bootstrap JS (opcional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
