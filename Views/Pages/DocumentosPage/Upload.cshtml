@{
    ViewData["Title"] = "Upload de Documento";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Symbols Outlined -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <!-- Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <!-- Animate on Scroll -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <style>
        :root {
            --color-primary: #5c3c8a;
            --color-accent: #774C9E;
            --color-bg-light: #f4f6f9;
            --shadow: rgba(0, 0, 0, 0.1);
            --text-dark: #333;
        }
        body {
            font-family: 'Poppins', sans-serif;
            background: var(--color-bg-light);
            color: var(--text-dark);
        }
        .upload-card {
            max-width: 600px;
            margin: 3rem auto;
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 4px 12px var(--shadow);
            padding: 2.5rem;
        }
        .form-label {
            font-weight: 600;
        }
        .btn-primary {
            background-color: var(--color-primary);
            border-color: var(--color-primary);
        }
        .btn-primary:hover {
            background-color: var(--color-accent);
            border-color: var(--color-accent);
        }
        .info-box {
            background: #f8f9fa;
            border-left: 4px solid var(--color-accent);
            padding: .75rem 1rem;
            margin-bottom: 1.5rem;
            border-radius: .5rem;
            font-size: .95rem;
        }
    </style>
</head>
<body>
    <!-- Navbar Partial -->
    @await Html.PartialAsync("_NavbarPartial")

    <div class="upload-card animate__animated animate__fadeInUp" data-aos="fade-up">
        <h3 class="text-center mb-4" style="color: var(--color-primary);">
            <span class="material-symbols-outlined align-middle">upload_file</span>
            Upload de Documento
        </h3>
        <div class="info-box">
            <b>Como funciona?</b><br>
            O arquivo será renomeado automaticamente para: <b>[Tipo][MêsAno]_[Área].[extensão]</b><br>
            Exemplo: <code>DOCPDF052025_CONTABEIS.pdf</code><br>
            Tipos permitidos: <b>JPG, JPEG, PNG, DOC, DOCX, PDF, PPT, PPTX, XLS, XLSX</b>
        </div>
        @if (TempData["UploadError"] != null)
        {
            <div class="alert alert-danger">@TempData["UploadError"]</div>
        }
        @if (TempData["UploadSuccess"] != null)
        {
            <div class="alert alert-success">@TempData["UploadSuccess"]</div>
        }
        <form id="uploadForm" method="post" enctype="multipart/form-data" asp-action="Upload" autocomplete="off">
            @Html.AntiForgeryToken()
            <!-- Área do Documento -->
            <div class="mb-3">
                <label for="areaId" class="form-label">Área do Documento</label>
                <select id="areaId" name="areaId" class="form-select" required>
                    <option value="" disabled selected>Selecione...</option>
                    @foreach (var area in ViewBag.Areas)
                    {
                        <option value="@area.Id">@area.Nome</option>
                    }
                </select>
            </div>
            <!-- Tipo do Documento -->
            <div class="mb-3">
                <label for="tipoId" class="form-label">Tipo de Documento</label>
                <select id="tipoId" name="tipoId" class="form-select" required>
                    <option value="" disabled selected>Selecione...</option>
                    @foreach (var tipo in ViewBag.Tipos)
                    {
                        <option value="@tipo.Id">@tipo.Nome</option>
                    }
                </select>
            </div>
            <!-- Descrição -->
            <div class="mb-3">
                <label for="descricao" class="form-label">Descrição</label>
                <input type="text" class="form-control" id="descricao" name="descricao" maxlength="200" placeholder="Opcional">
            </div>
            <!-- Seleção de Arquivo -->
            <div class="mb-4">
                <label for="fileUpload" class="form-label">Escolha o Arquivo</label>
                <input class="form-control" type="file" id="fileUpload" name="file" accept=".jpg,.jpeg,.png,.doc,.docx,.pdf,.ppt,.pptx,.xls,.xlsx" required />
                <div class="form-text">Tipos permitidos: JPG, JPEG, PNG, DOC, DOCX, PDF, PPT, PPTX, XLS, XLSX.</div>
            </div>
            <!-- Botão Enviar -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary px-5">
                    <span class="material-symbols-outlined align-middle">send</span> Enviar
                </button>
            </div>
        </form>
    </div>

    <!-- Footer Partial -->
    @await Html.PartialAsync("_FooterPartial")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({ once: true });
    </script>
</body>
</html>