@{
    ViewData["Title"] = "Upload de Arquivos - VoxDocs";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - VoxDocs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;900&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
    <link href="~/css/AdminStyles/Upload/Upload.css" rel="stylesheet" />
</head>
<body>

<!-- Toggle sidebar button -->
<button id="toggleSidebarBtn" class="btn">
    <span class="material-icons">menu</span>
</button>

<div class="wrapper">
    <!-- Sidebar -->
        <nav id="sidebar">
        <h2 class="text-center mb-4">Painel Admin</h2>
        <a asp-controller="DashboardMvc" asp-action="Dashboard" class="sidebar-link">Dashboard</a>
        <a asp-controller="UsersAdminMvc" asp-action="UsersAdmin" class="sidebar-link">Admin Usuários</a>
        <a asp-controller="TokensMvc" asp-action="Tokens" class="sidebar-link">Tokens</a>
        <a asp-controller="UploadMvc" asp-action="Upload" class="sidebar-link">Upload de Arquivos</a>
        </nav>

    <!-- Main content -->
    <main class="content">
        <div class="container">
            <div class="card p-4">
                <div class="card-body">
                    <h2 class="card-title mb-4 text-center">Upload de Arquivos</h2>
                    <p class="text-center mb-4">Selecione um arquivo e escolha o tipo de documento.</p>

                    <form id="uploadForm">
                        <div class="mb-3">
                            <label for="fileInput" class="form-label">Arquivo</label>
                            <input type="file" id="fileInput" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="documentType" class="form-label">Tipo de Documento</label>
                            <select id="documentType" class="form-select" required>
                                <option value="CONT">Contábeis</option>
                                <option value="OPER">Operacionais</option>
                                <option value="COMER">Comerciais</option>
                                <option value="FISC">Fiscais</option>
                            </select>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>
                    </form>

                    <div class="mt-5">
                        <h4 class="text-muted mb-3">Arquivos Enviados</h4>
                        <div id="uploadedFiles"></div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Bootstrap JS bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Sidebar toggle
    const toggleBtn = document.getElementById('toggleSidebarBtn');
    const wrapper = document.querySelector('.wrapper');

    toggleBtn.addEventListener('click', () => {
        wrapper.classList.toggle('sidebar-open');
    });

    // Upload simples (simulado)
    const uploadForm = document.getElementById('uploadForm');
    const uploadedFilesDiv = document.getElementById('uploadedFiles');

    uploadForm.addEventListener('submit', function(event) {
        event.preventDefault();

        const fileInput = document.getElementById('fileInput');
        const documentType = document.getElementById('documentType').value;

        if (fileInput.files.length > 0) {
            const fileName = fileInput.files[0].name;
            const uploadedItem = document.createElement('div');
            uploadedItem.className = 'uploaded-item d-flex justify-content-between align-items-center mt-3';
            uploadedItem.innerHTML = `
                <span>${fileName} (${documentType})</span>
                <button onclick="this.parentElement.remove()" class="btn btn-danger btn-sm">Remover</button>
            `;
            uploadedFilesDiv.appendChild(uploadedItem);

            uploadForm.reset();
        }
    });
</script>

</body>
</html>
