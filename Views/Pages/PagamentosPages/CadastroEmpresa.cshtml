@model VoxDocs.DTO.DTOCadastroEmpresa
@{
    Layout = null;
}

<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Cadastro • VoxDocs</title>
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet"/>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="~/css/PagamentosStyles/main.css" />
</head>

<div class="doc-card">
  <div class="doc-header">
    <span class="material-symbols-outlined">how_to_reg</span>
    <span>Cadastro de Empresa</span>
  </div>

  <div class="alert">
    Plano: <strong id="planoNome">@Model.PlanoPago</strong> | 
    Limite de usuários: <strong id="planoLimite">@ViewBag.LimiteUsuarios</strong>
  </div>

  <div class="stepper mb-4">
    <div class="step active">1</div>
    <div class="step">2</div>
    <div class="step">3</div>
    <div class="step">4</div>
    <div class="step">5</div>
  </div>

  <form id="formWizard">
    <div id="stepContentContainer">
      <input type="hidden" asp-for="PlanoPago" />
    </div>

    <div class="wizard-nav">
      <button type="button" class="btn btn-outline-secondary" id="prevBtn" disabled>« Anterior</button>
      <button type="button" class="btn" id="nextBtn">Próximo »</button>
    </div>
  </form>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/qrcodejs/qrcode.min.js"></script>
<script src="~/js/PagamentoScript/main.js"></script>
<script src="~/js/PagamentoScript/step2.js"></script>
<script src="~/js/PagamentoScript/step3.js"></script>
<script src="~/js/PagamentoScript/step4.js"></script>
<script src="~/js/PagamentoScript/step5.js"></script>