@model VoxDocs.Models.CriarCadastroPagamentoViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cadastro • VoxDocs</title>
    <meta name="description" content="Finalize seu cadastro e pagamento para acessar a plataforma VoxDocs" />

    <!-- Fonts e Ícones -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://cdn.jsdelivr.net">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />

    <!-- CSS Personalizado -->
    <style>
        :root {
            --clr-primary: #5c3c8a;
            --clr-accent: #774C9E;
            --clr-bg: #fafafa;
            --clr-card: #ffffff;
            --shadow-light: rgba(0,0,0,0.05);
        }
        
        body {
            background: var(--clr-bg);
            font-family: 'Poppins', sans-serif;
            color: #333;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        
        .doc-card {
            background: var(--clr-card);
            border-radius: 12px;
            box-shadow: 0 4px 16px var(--shadow-light);
            padding: 2rem;
            width: 100%;
            max-width: 800px;
            position: relative;
            overflow: hidden;
        }
        
        .doc-header {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
            font-weight: 600;
            font-size: 1.25rem;
            color: var(--clr-primary);
        }
        
        .doc-header .material-symbols-outlined {
            font-size: 2rem;
            color: var(--clr-accent);
        }
        
        .alert {
            font-size: 0.9rem;
            border: none;
            border-radius: 8px;
            background: var(--clr-bg);
            color: #555;
            margin-bottom: 1.5rem;
            padding: 0.75rem 1rem;
        }
        
        /* Stepper minimalista */
        .stepper {
            display: flex;
            justify-content: space-between;
            counter-reset: step;
            margin-bottom: 1.5rem;
            position: relative;
        }
        
        .stepper::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 1rem;
            right: 1rem;
            height: 2px;
            background: #eee;
            z-index: 0;
        }
        
        .step {
            position: relative;
            z-index: 1;
            counter-increment: step;
            width: 2rem;
            height: 2rem;
            background: #eee;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
            color: #888;
            transition: background 0.3s, color 0.3s;
        }
        
        .step.active {
            background: var(--clr-primary);
            color: #fff;
        }
        
        /* Conteúdo das etapas */
        .step-content {
            opacity: 0;
            max-height: 0;
            overflow: hidden;
            transition: opacity 0.5s, max-height 0.5s;
        }
        
        .step-content.active {
            opacity: 1;
            max-height: 100vh;
        }
        
        .form-control, .form-select {
            border: 1px solid #ddd;
            border-radius: 6px;
            transition: border-color 0.3s, box-shadow 0.3s;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: var(--clr-accent);
            box-shadow: 0 0 0 3px rgba(119,76,158,0.2);
        }
        
        .wizard-nav {
            display: flex;
            justify-content: space-between;
            margin-top: 1.5rem;
        }
        
        .wizard-nav .btn {
            min-width: 100px;
            transition: transform 0.2s;
        }
        
        .wizard-nav .btn:hover {
            transform: translateY(-2px);
        }
        
        /* Ajustes para os cards internos */
        .inner-card {
            background: var(--clr-bg);
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 1rem;
        }
        
        .inner-card h5 {
            color: var(--clr-primary);
            font-size: 1rem;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* Estilos para pastas e subpastas */
        .card {
            border: 1px solid #ddd;
            border-radius: 6px;
            padding: 0.5rem;
            margin-bottom: 0.5rem;
        }

        .btn-adicionar-subpasta {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }

        .subpastas-container {
            margin-top: 0.5rem;
        }

        .input-group {
            display: flex;
            gap: 0.5rem;
        }

        .input-group button {
            padding: 0.25rem 0.5rem;
        }
    </style>
</head>
<body>
    <div class="doc-card">
        <div class="doc-header">
            <span class="material-symbols-outlined">how_to_reg</span>
            <span>Cadastro de Empresa</span>
        </div>

        <div class="alert">
            Plano: <strong>@Model.NomePlano</strong> | Periodicidade: <strong>@Model.Periodicidade</strong>
        </div>

        <!-- Stepper -->
        <div class="stepper mb-4">
            @for (int i = 1; i <= 5; i++) {
                <div class="step @(i == 1 ? "active" : "")">@i</div>
            }
        </div>

        <form id="formWizard" asp-action="ConfirmarPagamento" method="POST">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="NomePlano"/>
            <input type="hidden" asp-for="Periodicidade" />

            <!-- STEP 1: Dados da Empresa -->
            <div class="step-content active" data-step="1">
                <div class="inner-card">
                    <h5>
                        <span class="material-symbols-outlined">business</span>
                        Dados da Empresa
                    </h5>
                    <div class="mb-3">
                        <label asp-for="EmpresaContratante" class="form-label">Nome da Empresa</label>
                        <input type="text" asp-for="EmpresaContratante" class="form-control" placeholder="ACME S/A" required>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EmailContato" class="form-label">E-mail de Contato</label>
                        <input type="email" asp-for="EmailContato" class="form-control" placeholder="contato@empresa.com" required>
                    </div>
                </div>
                <div id="step1Error" class="d-none text-danger mb-3"></div>
            </div>

            <!-- STEP 2: Pastas -->
            <div class="step-content" data-step="2">
                <div class="inner-card">
                    <h5>
                        <span class="material-symbols-outlined">folder</span>
                        Pastas e Subpastas
                    </h5>
                    <div id="pastasPrincipaisContainer"></div>
                    <button type="button" id="btnAdicionarPastaPrincipal" class="btn btn-outline-primary">+ Pasta Principal</button>
                </div>
            </div>

            <!-- STEP 3: Administradores -->
            <div class="step-content" data-step="3">
                <div class="inner-card">
                    <h5>
                        <span class="material-symbols-outlined">admin_panel_settings</span>
                        Administradores
                    </h5>
                    <div id="adminsContainer"></div>
                    <button type="button" id="btnAdicionarAdmin" class="btn btn-primary">+ Administrador</button>
                </div>
            </div>

            <!-- STEP 4: Usuários Comuns -->
            <div class="step-content" data-step="4">
                <div class="inner-card">
                    <h5>
                        <span class="material-symbols-outlined">person</span>
                        Usuários Comuns
                    </h5>
                    <div id="usersContainer"></div>
                    <button type="button" id="btnAdicionarUser" class="btn btn-primary">+ Usuário</button>
                </div>
            </div>

            <!-- STEP 5: Pagamento -->
            <div class="step-content" data-step="5">
                <div class="inner-card">
                    <h5>
                        <span class="material-symbols-outlined">credit_card</span>
                        Pagamento
                    </h5>
                    <div class="mb-3">
                        <label asp-for="MetodoPagamentoSelecionado" class="form-label">Método de Pagamento</label>
                        <select asp-for="MetodoPagamentoSelecionado" class="form-select" required>
                            <option value="">Selecione...</option>
                            <option value="PIX">PIX</option>
                            <option value="CARTAO">Cartão de Crédito</option>
                            <option value="BOLETO">Boleto Bancário</option>
                        </select>
                    </div>
                    <div id="cartaoCreditoFields" class="d-none">
                        <div class="mb-3">
                            <label class="form-label">Número do Cartão</label>
                            <input type="text" class="form-control" placeholder="0000 0000 0000 0000" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Validade (MM/AA)</label>
                            <input type="text" class="form-control" placeholder="MM/AA" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Código de Segurança</label>
                            <input type="text" class="form-control" placeholder="CVV" required>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Finalizar Pagamento</button>
            </div>

            <!-- Navegação -->
            <div class="wizard-nav">
                <button type="button" class="btn btn-outline-secondary" id="prevBtn" disabled>« Anterior</button>
                <button type="button" class="btn btn-primary" id="nextBtn">Próximo »</button>
            </div>
        </form>
    </div>

    <!-- Templates para Pastas e Subpastas -->
    <template id="templatePastaPrincipal">
        <div class="card mb-2 p-2 border rounded">
            <div class="d-flex justify-content-between align-items-center">
                <input type="text" class="form-control pasta-nome" placeholder="Nome da Pasta Principal" required />
                <button type="button" class="btn btn-sm btn-outline-secondary btn-adicionar-subpasta">
                    <i class="fas fa-plus"></i> Subpasta
                </button>
            </div>
            <div class="subpastas-container mt-2">
                <!-- Subpastas serão adicionadas aqui -->
            </div>
        </div>
    </template>

    <template id="templateSubpasta">
        <div class="input-group mb-1">
            <input type="text" class="form-control subpasta-nome" placeholder="Nome da Subpasta" required />
            <button type="button" class="btn btn-outline-danger btn-sm" onclick="this.closest('.input-group').remove()">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </template>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Controle do stepper
        const steps = document.querySelectorAll('.step');
        const contents = document.querySelectorAll('.step-content');
        let current = 0;

        const updateStepper = () => {
            steps.forEach((s, i) => s.classList.toggle('active', i === current));
            contents.forEach((c, i) => c.classList.toggle('active', i === current));
            document.getElementById('prevBtn').disabled = current === 0;
            document.getElementById('nextBtn').innerText = current === steps.length - 1 ? 'Concluir' : 'Próximo »';
        };

        document.getElementById('nextBtn').addEventListener('click', () => {
            if (current < steps.length - 1) current++;
            updateStepper();
        });

        document.getElementById('prevBtn').addEventListener('click', () => {
            if (current > 0) current--;
            updateStepper();
        });

        // Controle dos campos de cartão de crédito
        document.getElementById('MetodoPagamentoSelecionado').addEventListener('change', function() {
            const cartaoFields = document.getElementById('cartaoCreditoFields');
            if (this.value === 'CARTAO') {
                cartaoFields.classList.remove('d-none');
            } else {
                cartaoFields.classList.add('d-none');
            }
        });
    </script>
    <script type="module" src="/js/PagamentoScript/ultilities.js"></script>
    <script type="module" src="/js/PagamentoScript/main.js"></script>
</body>
</html>