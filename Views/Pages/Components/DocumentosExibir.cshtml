@model IEnumerable<VoxDocs.DTO.DTODocumento>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            Nenhum documento encontrado para este filtro.
        </div>
    }
    else
    {
        <div class="table-responsive" data-aos="fade-up" data-aos-delay="100">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Nome</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">Criação</th>
                        <th scope="col">Atualização</th>
                        <th scope="col">Criador</th>
                        <th scope="col">Última Alter.</th>
                        <th scope="col" class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doc in Model)
                    {
                        <tr>
                            <td>@doc.Nome</td>
                            <td>@doc.Descricao</td>
                            <td>@doc.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@doc.DataAtualizacao.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@doc.UsuarioCriador</td>
                            <td>@doc.UsuarioUltimaAlteracao</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-controller="DocumentosMvc"
                                       asp-action="Details"
                                       asp-route-id="@doc.Id"
                                       class="btn btn-outline-primary"
                                       title="Visualizar">
                                        <span class="material-symbols-outlined">visibility</span>
                                    </a>
                                    <a asp-controller="DocumentosMvc"
                                       asp-action="Edit"
                                       asp-route-id="@doc.Id"
                                       class="btn btn-outline-warning"
                                       title="Editar">
                                        <span class="material-symbols-outlined">edit</span>
                                    </a>
                                    <form asp-controller="DocumentosMvc"
                                          asp-action="Delete"
                                          asp-route-id="@doc.Id"
                                          method="post"
                                          onsubmit="return confirm('Deseja realmente apagar este documento?');"
                                          class="d-inline">
                                        <button type="submit"
                                                class="btn btn-outline-danger"
                                                title="Apagar">
                                            <span class="material-symbols-outlined">delete</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>