@model VoxDocs.Models.LoginViewModel

@{
    Layout = null; // Página pública sem layout
    ViewData["Title"] = "Login - VoxDocs";
    ViewData["Description"] = "Acesse sua conta VoxDocs para gerenciar seus documentos de forma eficiente e segura.";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap & Ícones -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <div class="login-form">
            <h1>Bem-vindo a <span>VoxDocs</span></h1>

            <form asp-controller="LoginMvc" asp-action="Login" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <input asp-for="Usuario" class="form-control" placeholder="Usuário" />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <input asp-for="Senha" type="password" class="form-control" placeholder="Senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                    <button type="button" class="senha-toggle" id="toggleSenha">
                        <span class="material-icons" id="iconeSenha">visibility</span>
                    </button>
                </div>

                <button type="submit" class="btn login-btn w-100 py-2">Entrar</button>
            </form>

            <!-- Exibe erro de login, caso exista -->
            @if (TempData["LoginError"] != null)
            {
                <div class="alert alert-danger mt-3">
                    @TempData["LoginError"]
                </div>
            }
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('toggleSenha').onclick = () => {
            var inp = document.querySelector('input[name="Senha"]'),
                ic  = document.getElementById('iconeSenha');
            if (inp.type === 'password') {
                inp.type = 'text';
                ic.textContent = 'visibility_off';
            } else {
                inp.type = 'password';
                ic.textContent = 'visibility';
            }
        };
    </script>
</body>
</html>
