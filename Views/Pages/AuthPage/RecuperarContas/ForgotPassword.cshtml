@model VoxDocs.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Recuperar a Senha • VoxDocs";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/OculteCssNativoWeb.css" />
    <link rel="stylesheet" href="~/css/AuthStyles/styleRecuperarSenha.css">
</head>
<body>
    <div class="login-card" data-aos="fade-up" data-aos-duration="1000">
        <span class="material-symbols-outlined libras-icon">sign_language</span>

        <div class="text-center">
            <img src="~/img/VoxDox sem fundo.png" alt="Logo" class="logo">
            <div class="title">Recuperar senha</div>
            <div class="subtitle">Digite seu e-mail para receber o link de recuperação</div>
        </div>

        @if (TempData["ForgotPasswordError"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ForgotPasswordError"]
            </div>
        }
        @if (TempData["ForgotPasswordSuccess"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["ForgotPasswordSuccess"]
            </div>
        }

        <form asp-action="ForgotPassword" asp-controller="AuthMvc" method="post">
            <div class="form-group" data-aos="fade-up" data-aos-delay="100">
                <input asp-for="Email" class="form-control" placeholder="E-mail" required />
                <span class="material-symbols-outlined">mail</span>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="d-grid" data-aos="zoom-in" data-aos-delay="200">
                <button type="submit" class="btn btn-accent btn-lg rounded-pill">Enviar Link</button>
            </div>
        </form>

        <div class="back-link" data-aos="fade-up" data-aos-delay="300">
            <a asp-action="Login" asp-controller="AuthMvc">&larr; Voltar para o login</a>
        </div>

        <div class="footer-note" data-aos="fade-up" data-aos-delay="400">
            Sistema interno © VoxDocs 2025
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>
</html>